#!/usr/bin/python
import sys
import os
import time
import platform

argv = ""
platformArgv = ""
if platform.system() == "Linux":
    shell = "/usr/bin/emacs "
    platformArgv = " -mm "
elif platform.system() == "Darwin":
    shell = "/Applications/beyondcompare.app/Contents/MacOS/bcomp "

if len(sys.argv) == 1:
    argv = " "
else:
    for i in range(1, len(sys.argv)):
        argv += sys.argv[i] + " "

shell = shell + platformArgv + argv

os.system("rm /Users/mamk/Library/Application\ Support/Beyond\ Compare/registry.dat")

os.system(shell)
