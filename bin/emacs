#!/usr/bin/python
import sys
import os
import time
import platform

argv = ""
platformArgv = ""
if platform.system() == "Linux":
    shell = "/usr/bin/emacs "
    platformArgv = " -mm "
elif platform.system() == "Darwin":
    shell = "/Applications/Emacs.app/Contents/MacOS/Emacs "
    platformArgv = " -geometry 179x55 "

if len(sys.argv) == 1:
    argv = "."
else:
    for i in range(1, len(sys.argv)):
        argv += sys.argv[i] + " "

shell = shell + platformArgv + argv 

pid = os.fork()
if pid == 0:
    os.system(shell)
else:
    time.sleep(1)
    
            
        
